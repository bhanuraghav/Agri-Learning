<%- include('partials/navigation.ejs') %>


<div class="container">
    <h1 style="text-align:center;"><%=result.name%></h1>

    <div class="card-body">
            <hr>
            <div style="max-width: 80%;margin: 25px auto;">
              <div class="form-group ">
                <label ><strong>Crop Name :</strong> </label>                
                  <%=result.cropName%>
              </div>

              <div class="form-group">
                <label ><strong>Disease Symptoms :</strong> </label> 
                    <%result.symptoms.forEach(function(ans){ %> 
                         <li>  <%=ans%> </li>
                    <%  }) %>               
              </div>
              <div class="form-group">
                <label ><strong>Fertilizers that can be used to cure : </strong></label> 
                    <%result.fertilizers.forEach(function(ans){ %> 
                         <li> <a href="<%=ans.link%>"><%=ans.name%> </a></li>
                    <%  }) %>               
              </div>

